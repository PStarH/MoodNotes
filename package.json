{
  "name": "moodnotes",
  "version": "1.0.0",
  "description": "A local-first journaling app with mood tracking, habit insights, and beautiful data visualization",
  "author": {
    "name": "PStarH",
    "url": "https://github.com/PStarH"
  },
  "homepage": "https://github.com/PStarH/MoodNotes#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/PStarH/MoodNotes.git"
  },
  "bugs": {
    "url": "https://github.com/PStarH/MoodNotes/issues"
  },
  "keywords": [
    "journal",
    "diary",
    "mood-tracker",
    "habit-tracker",
    "productivity",
    "electron",
    "vue",
    "local-first",
    "offline",
    "privacy"
  ],
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run vite\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:3000 npm run electron\"",
    "vite": "vite",
    "electron": "npm run --prefix electron start",
    "build": "vite build && npm run build-electron",
    "build-electron": "npm run --prefix electron build",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview",
    "serve": "vite serve",
    "electron:serve": "vue-cli-service electron:serve",
    "electron:build": "vue-cli-service electron:build",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vuepic/vue-datepicker": "^11.0.3",
    "axios": "^1.7.7",
    "chart.js": "^4.5.1",
    "chartjs-plugin-zoom": "^2.2.0",
    "dompurify": "^3.3.0",
    "jspdf": "^2.5.2",
    "localforage": "^1.10.0",
    "lucide-vue-next": "^0.130.0",
    "quill": "^2.0.2",
    "vue": "^3.5.10",
    "vue-chartjs": "^5.3.2",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.4.5",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "happy-dom": "^20.0.4",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.8",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.2"
  },
  "build": {
    "appId": "com.pstarh.moodnotes",
    "productName": "MoodNotes",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*"
    ],
    "mac": {
      "icon": "build-resources/icon.icns",
      "category": "public.app-category.lifestyle",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist",
      "target": [
        {
          "target": "mas",
          "arch": ["x64", "arm64"]
        },
        "dmg",
        "zip"
      ]
    },
    "mas": {
      "type": "distribution",
      "hardenedRuntime": false,
      "entitlements": "build-resources/entitlements.mas.plist",
      "entitlementsInherit": "build-resources/entitlements.mas.inherit.plist",
      "provisioningProfile": "build-resources/embedded.provisionprofile"
    },
    "win": {
      "icon": "build-resources/icon.ico",
      "target": [
        "nsis",
        "portable",
        "msix"
      ]
    },
    "linux": {
      "icon": "public/AppIcons/Assets.xcassets/AppIcon.appiconset/512.png",
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
